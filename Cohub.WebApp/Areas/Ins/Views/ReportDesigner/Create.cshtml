@model Report
@inject IStringLocalizer<Report> L
@{
    ViewBag._Title = L["New Report"];
}

<div class="pad">
    <h1>@ViewBag._Title</h1>

    <form method="post">

        <partial name="UI/ValidationSummary" />

        <div class="input-group w-xs">
            <label asp-for="Id"></label>
            @Html.EditorFor(m => m.Id)
            <span asp-validation-for="Id"></span>
        </div>

        @Html.EditorForModel()

        <div class="input-group">
            <button class="button">@L["Create Report"]</button>
            <a class="button" href="@Url.Action("Index")">@SL["Cancel"]</a>
        </div>

    </form>
</div>
