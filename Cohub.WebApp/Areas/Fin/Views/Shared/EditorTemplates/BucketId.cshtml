@model string
@inject CohubDbContext db
@{
    var items = await db.Set<Cohub.Data.Fin.Bucket>()
        .Where(o => o.IsActive || (Model != null && o.Id == Model))
        .OrderBy(o => o.Id)
        .Select(o => new SelectListItem(o.Name, o.Id, o.Id == Model))
        .ToListAsync();
}
<select asp-for="@Model" asp-items="@items">
    <option></option>
</select>