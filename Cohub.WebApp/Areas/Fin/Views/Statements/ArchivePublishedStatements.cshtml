@model int
@{ ViewBag._Title ??= SL["Archive Published Statements"]; }
<div class="m">

    <h1>@ViewBag._Title</h1>

    <details open class="w-sm">

        <summary>@SL["Options"]</summary>

        <p>
            Note that this will not archive published assessments.
            An assessment must be manually archived.
        </p>

        <form method="post">

            <partial name="UI/ValidationSummary" />

            <p>
                @SL["Archive {0} Published Statements?", Model]
            </p>

            <div class="input-group">
                <button class="button">@SL["Yes"]</button>
                <a class="button" href="@Url.ReturnUrlOrAction("Index")">@SL["No"]</a>
            </div>

        </form>

    </details>

</div>