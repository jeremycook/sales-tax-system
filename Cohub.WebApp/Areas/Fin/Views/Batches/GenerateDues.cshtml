@model GenerateDuesViewModel
@{
    ViewBag._Title = "Generate Dues";
}

<div class="pad">

    <h1>@ViewBag._Title</h1>

    <div class="card w-sm">

        <p>
            Creates a new batch with Dues estimated or re-calculated through the effective date.
            Run this before generating statements.
            Leave filters empty to not filter on that criteria.
        </p>

        <form method="post">
            <partial name="UI/ValidationSummary" />

            <fieldset>

                <legend>Options</legend>

                <div class="input-group">
                    <label asp-for="EffectiveDate"></label>
                    @Html.EditorFor(m => m.EffectiveDate)
                    <span asp-validation-for="EffectiveDate"></span>
                    @if (Html.MetadataFor(m => m.EffectiveDate).Description is string EffectiveDateDescription)
                    {
                        <span class="text-muted">@EffectiveDateDescription</span>
                    }
                </div>

            </fieldset>

            <fieldset>

                <legend>Filters</legend>

                <div class="input-group">
                    <label asp-for="OrganizationIds"></label>
                    @Html.EditorFor(m => m.OrganizationIds)
                    <span asp-validation-for="OrganizationIds"></span>
                    @if (Html.MetadataFor(m => m.OrganizationIds).Description is string OrganizationIdsDescription)
                    {
                        <span class="text-muted">@OrganizationIdsDescription</span>
                    }
                </div>

            </fieldset>

            <div class="input-group">
                <button class="button">Submit</button>
            </div>
        </form>

    </div>

</div>
