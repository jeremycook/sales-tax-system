@model IEnumerable<Batch>
@{
    ViewBag._Title = VL["Batches"];
    ViewBag._SearchUrl = Url.Action("Index");
}
<div class="pad">

    <h1>@ViewBag._Title</h1>

    <table class="card">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(m => m.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.IsPosted)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.IsBalanced)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.DepositControlAmount)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.TotalDeposited)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.TotalRevenueAndOverpayment)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Posted)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Created)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.CreatedBy)
                </th>
            </tr>
        </thead>
        <tbody class="text-right">
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-nowrap">
                        <a href="@Url.Action("Details", new { id = item.Id })">@item</a>
                    </td>
                    <td>
                        @Html.DisplayFor(_ => item.IsPosted)
                    </td>
                    <td>
                        @Html.DisplayFor(_ => item.IsBalanced)
                    </td>
                    <td>
                        @Html.DisplayFor(_ => item.DepositControlAmount)
                    </td>
                    <td>
                        @Html.DisplayFor(_ => item.TotalDeposited)
                    </td>
                    <td>
                        @Html.DisplayFor(_ => item.TotalRevenueAndOverpayment)
                    </td>
                    <td>
                        @Html.DisplayFor(_ => item.Posted)
                    </td>
                    <td>
                        @Html.DisplayFor(_ => item.Created)
                    </td>
                    <td>
                        @Html.DisplayFor(_ => item.CreatedBy)
                    </td>
                </tr>
            }
        </tbody>
        <tbody>
            <tr>
                <td colspan="100" class="text-center">
                    <partial name="UI/Paging" />
                </td>
            </tr>
        </tbody>
    </table>

</div>
