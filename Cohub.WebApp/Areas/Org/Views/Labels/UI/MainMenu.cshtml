@* Called by SiteNav *@
<div class="dropdown">
    <button class="dropdown-button" type="button" id="main-menu-labels-dropdown">
        Labels
    </button>
    <div class="dropdown-content" aria-labelledby="main-menu-labels-dropdown">
        <div class="card flex-right gap-0">
            <div class="menu">
                <a href="@Url.Action("Index")">List Labels</a>
                <a href="@Url.Action("Create")">New Label</a>
            </div>
        </div>
    </div>
</div>
@if (ViewContext.RouteData.Values.TryGetValue("id", out var idValue))
{
    <div class="dropdown">
        <button class="dropdown-button" type="button" id="main-menu-label-dropdown">
            Label
        </button>
        <div class="dropdown-content" aria-labelledby="main-menu-label-dropdown">
            <div class="card flex-right gap-0">
                <div class="menu">
                    <a href="@Url.Action("Details", new { id = idValue })">View Label</a>
                    <a href="@Url.Action("Edit", new { id = idValue })">Edit Label</a>
                    <a href="@Url.Action("Delete", new { id = idValue })">Delete Label</a>
                </div>
            </div>
        </div>
    </div>
}
<partial name="UI/SiteNavSearch" />