@model Organization

@if (ViewContext.RouteData.Values.CreateAction())
{
    <div class="input-group">
        <label asp-for="Id"></label>
        <input asp-for="Id" autofocus />
        <span asp-validation-for="Id"></span>
        @if (Html.MetadataFor(m => m.Id).Description is string IdDescription)
        {<span class="text-muted">@IdDescription</span>}
    </div>
}
else
{
    <div class="input-group">
        <label asp-for="Id"></label>
        <input readonly asp-for="Id" />
        <span asp-validation-for="Id"></span>
        @if (Html.MetadataFor(m => m.Id).Description is string IdDescription)
        {<span class="text-muted">@IdDescription</span>}
    </div>
}

