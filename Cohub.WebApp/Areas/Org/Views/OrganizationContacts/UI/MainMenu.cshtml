@* Called by SiteNav *@
<div class="dropdown">
    <button class="dropdown-button" type="button" id="main-menu-organization-contacts-dropdown">
        Organization Contacts
    </button>
    <div class="dropdown-content" aria-labelledby="main-menu-organization-contacts-dropdown">
        <div class="card flex-right gap-0">
            <div class="menu">
                <a href="@Url.Action("Index")">List Organization Contacts</a>
                <a href="@Url.Action("Create")">New Organization Contact</a>
            </div>
        </div>
    </div>
</div>
@if (ViewContext.RouteData.Values.TryGetValue("id", out var organizationContactId))
{
    <div class="dropdown">
        <button class="dropdown-button" type="button" id="main-menu-organization-contact-dropdown">
            Organization Contact
        </button>
        <div class="dropdown-content" aria-labelledby="main-menu-organization-contact-dropdown">
            <div class="card flex-right gap-0">
                <div class="menu">
                    <a href="@Url.Action("Details", new { id = organizationContactId })">View Organization Contact</a>
                    <a href="@Url.Action("Edit", new { id = organizationContactId })">Edit Organization Contact</a>
                    <a href="@Url.Action("Delete", new { id = organizationContactId })">Delete Organization Contact</a>
                </div>
            </div>
        </div>
    </div>
}
<partial name="UI/SiteNavSearch" />