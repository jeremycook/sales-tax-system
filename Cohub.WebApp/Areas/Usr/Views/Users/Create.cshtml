@model UserInputModel
@inject IStringLocalizer<User> L
@{
    ViewBag._Title = L["New User"];
}

<div class="m">

    <h1>@ViewBag._Title</h1>

    <div class="card w-sm">

        <form method="post">

            <partial name="UI/ValidationSummary" />

            @Html.EditorForModel()

            <div class="input-group">
                <button class="button">@L["Create User"]</button>
                <a class="button" href="@Url.ReturnUrlOrAction("Index", "Users")">@SL["Cancel"]</a>
            </div>

        </form>
    </div>

</div>
