@model IEnumerable<User>
@inject IStringLocalizer<User> L
@{
    ViewBag._Title = L["Users"];
    ViewBag._SearchUrl = Url.Action("Index");
}
<div class="m">
    <h1>@ViewBag._Title</h1>

    <table class="card">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(m => m.Username)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.IsActive)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Role)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Created)
                </th>
            </tr>
        </thead>
        <tbody class="text-left">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a href="@Url.Action("Details", new { id = item.Id })">
                            @item.Username
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(_ => item.IsActive)
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @Html.DisplayFor(_ => item.Role)
                    </td>
                    <td class="text-right">
                        @Html.DisplayFor(_ => item.Created)
                    </td>
                </tr>
            }
        </tbody>
        <tbody>
            <tr>
                <td class="text-center" colspan="100">
                    <partial name="UI/Paging" />
                </td>
            </tr>
        </tbody>
    </table>

</div>
