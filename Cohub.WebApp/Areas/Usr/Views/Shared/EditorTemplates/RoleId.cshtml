@model string
@inject CohubDbContext db
@{
    var options = await db.Roles()
        .Where(o => o.IsActive || (Model != null && Model == o.Id))
        .OrderBy(o => o.Id)
        .Select(o => new SelectListItem(o.Id, o.Id, Model != null && Model == o.Id))
        .ToListAsync();
}
<select asp-for="@Model" asp-items="options"></select>